{
  "apps": [{
    "name": "holmes",
    "script": "npm",
    "args": "start",
    "cwd": "/var/www/holmes/source",
    "env": {
      "NODE_ENV": "production"
    }
  }],
  "deploy": {
    "production": {
      "user": "root",
      "host": "jins.io",
      "path": "/var/www/holmes",
      "repo": "https://github.com/amio/holmes.git",
      "ref": "origin/master",
      "post-deploy": "yarn install && yarn build && pm2 startOrRestart ecosystem.json"
    }
  }
}
